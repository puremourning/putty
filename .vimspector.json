{
    "configurations": {
	"run": {
	    "adapter": "vscode-cpptools",
	    "configuration": {
		"request": "launch",
		"type": "cppdbg",
		"program": "${workspaceRoot}/unix/putty",
		"cwd": "${workspaceRoot}",
                "MIMode": "lldb",
                "stopOnEntry": true,
                "stopAtEntry": true,
                "env": {
                    "DISPLAY": "${DISPLAY}"
                }
	    }
	}
    }
}
